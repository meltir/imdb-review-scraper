{
    "$schema": "https://raw.githubusercontent.com/infection/infection/master/resources/schema.json",
    "source": {
        "directories": [
            "src"
        ]
    },
    "logs": {
        "text": "infection.log",
        "html": "infection.html"
    },
    "mutators": {
        "@default": true,
        "@unwrap": false,
        "CastString": {
            "ignoreSourceCodeByRegex": [
                ".*\\(string\\) preg_replace\\(.*"
            ]
        }
    }
}