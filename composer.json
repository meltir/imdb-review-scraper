{
    "name": "meltir/imdb-ratings-scraper",
    "description": "Scrape an imdb users reviews and ratings from their public imdb profile.",
    "type": "library",
    "license": "proprietary",
    "readme": "README.md",
    "authors": [
        {
            "name": "Lukasz Andrzejak",
            "email": "packagist@meltir.com",
            "homepage": "https://www.meltir.com"
        }
    ],
    "homepage": "https://github.com/meltir/imdb-review-scraper",
    "support": {
        "email": "dev@null.org",
        "issues": "https://github.com/meltir/imdb-review-scraper/issues"
    },

    "autoload": {
        "psr-4": {
            "Meltir\\ImdbRatingsScraper\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Meltir\\ImdbRatingsScraper\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpunit": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/phpunit"
        ],

        "phpstan" : [
            "./vendor/bin/phpstan"
        ],

        "infection": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/infection.phar --ignore-msi-with-no-mutations --only-covered"
        ],

        "php-cs-fixer": [
            "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.dist.php --dry-run --verbose --diff"
        ],

        "php-cs-fixer-fix": [
            "./vendor/bin/php-cs-fixer fix --using-cache=no --config=.php-cs-fixer.dist.php"
        ],

        "phpinsights": [
            "Composer\\Config::disableProcessTimeout",
            "./vendor/bin/phpinsights"
        ],

        "ci-phpinsights": [
            "@phpinsights --min-quality=95  --min-complexity=70 --min-architecture=80 --min-style=80"
        ],

        "ci-phpunit" : [
            "@phpunit --log-junit=./phpunit-log.xml"
        ],

        "ci-infection": [
            "@infection --min-msi=95 --min-covered-msi=95 --logger-github"
        ],

        "ci-php-cs-fixer": [
            "@php-cs-fixer --format=junit --show-progress=dots"
        ],

        "ci-phpstan": [
            "@phpstan --error-format=github --xdebug"
        ],

        "install-infection-phar" : [
            "@php -r \"copy('https://github.com/infection/infection/releases/download/0.26.21/infection.phar', 'vendor/bin/infection.phar');\"",
            "chmod +x vendor/bin/infection.phar"
        ],

        "install-git-hooks": [
            "cp .github/hooks/* .git/hooks/",
            "chmod +x .git/hooks/*"
        ],

        "post-install-cmd": [
            "@install-infection-phar",
            "@install-git-hooks"
        ]


    },
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.2",
        "guzzlehttp/guzzle": "^7.5",
        "symfony/dom-crawler": "^6.2",
        "symfony/css-selector": "^6.2 || ^7.0"
    },
    "require-dev": {
        "ext-intl": "*",
        "phpunit/phpunit": "^9",
        "mockery/mockery": "^1.5",
        "friendsofphp/php-cs-fixer": "^3.16",
        "phpstan/phpstan": "^1.10",
        "nunomaduro/phpinsights": "^2.8"
    },
    "config": {
        "allow-plugins": {
            "infection/extension-installer": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
